{
  "compilerOptions": {
    "esModuleInterop": true,                 
    "target": "ES6",                         
    "jsx": "react",                          
    "module": "ES6",                         
    "moduleResolution": "Node",              
    "allowJs": true,                         
    "sourceMap": true,                       
    "outDir": "./dist",                      
    "removeComments": true,                  
    "forceConsistentCasingInFileNames": true,
    "strict": true,                          
    "skipLibCheck": true                     
  }
}
